PROPERTY 24 HOUSING PROJECT

1.--Display all properties in the database--
select * from dbo.property24

2.--Show only the city,province and property price columns--
select CITY, PROVINCE, PROPERTY_PRICE from dbo.property24

3.--List all distinct provinces in the table--

select distinct PROVINCE from dbo.property24

4.--find all properties located in gauteng--

select * from dbo.property24 where PROVINCE = 'Gauteng'

5.--Show properties priced under 1 500 000--

select * from dbo.property24 where PROPERTY_PRICE < 1500000

6.--List properties with more than 3 bedrooms--

select * from dbo.property24 where BEDROOMS > 3

7.--Find properties with parking for at least 2 cars--

select * from dbo.property24 where PARKING >= 2

8.--Show properties where the monthly repayment is greater than 25000--

select * from dbo.property24 where Monthly_Repayment > 25000

9.--Show all properties ordered by property price from highest to lowest--

select * from dbo.property24 order by PROPERTY_PRICE desc

10.--List properties ordered by floor size from smallest to largest--

select * from dbo.property24 order by FLOOR_SIZE asc

11.--Show gauteng properties ordered by monthly repayment--

select * from dbo.property24 where PROVINCE = 'Gauteng' order by Monthly_Repayment asc

12.--Find western cape properties priced below 3 000 000--

select * from dbo.property24 where PROVINCE = 'Western Cape' and PROPERTY_PRICE < 3000000

13.--Show kwazulu natal properties with 3 or more bedrooms--

select * from dbo.property24 where PROVINCE = 'KwaZulu Natal' and BEDROOMS >= 3

14.--Find properties in limpopo or free state ordered by property price--

select * from dbo.property24 where PROVINCE in ('Limpopo', 'Free State') order by PROPERTY_PRICE asc

15.--Show the most expensive properties--

select top 10 * from dbo.property24 order by PROPERTY_PRICE desc

16.--Show the 5 cheapest properties--

select top 5 * from dbo.property24 order by PROPERTY_PRICE asc

17.--Show the top 10 properties with the largest floor size--

select top 10 * from dbo.property24 order by FLOOR_SIZE desc

18.--Which province appears to have the highest priced properties--

select PROVINCE, MAX(PROPERTY_PRICE) as Max_Price from dbo.property24 group by PROVINCE order by Max_Price desc

19.--Which cities appears to have the most affordable housing--

select CITY, MIN(PROPERTY_PRICE) as Min_Price from dbo.property24 group by CITY order by Min_Price asc

20.--What minimum income is typically required for properties priced above 4 000 000--

select MIN_Gross_Monthly_Income from dbo.property24 where PROPERTY_PRICE > 4000000 order by MIN_Gross_Monthly_Income asc

